
<div class="form">
  <%= form_for @restaurant do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
    <%= f.label :food_type %>
    <%= f.collection_check_boxes :food_type_ids, FoodType.all, :id, :name %><br><br>
    <%= f.fields_for :food_type, @restaurant.food_types.build do |food_type| %>
      <%= food_type.text_field :name %>
    <% end %>
    <%= f.submit %>
  <% end %>
</div>

<br>

<div class="link">
  <%= link_to "Go Home", restaurants_path %>
</div>
