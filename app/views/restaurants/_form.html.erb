
<div class="form">
  <%= form_for @restaurant do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
    <%= f.collection_check_boxes :food_type_ids, FoodType.all, :id, :name %><br><br>
    <%= f.submit %>
  <% end %>
</div>

<br>

<div class="link">
  <%= link_to "Go Home", restaurants_path %>
</div>
